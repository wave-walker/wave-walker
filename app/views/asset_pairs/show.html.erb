<%= render 'breadcrumbs', crumbs: [
      link_to('Asset Pairs', asset_pairs_path),
      @asset_pair.name
    ] %>

<%= tag.h1 @asset_pair.name %>

  <nav>
    <details class="dropdown">
      <summary>
        <%= @duration %>
      </summary>
      <ul dir="rtl">
        <% Ohlc.durations.map(&:iso8601).each do |iso8601_duration| %>
          <li><%= link_to(iso8601_duration, asset_pair_path(@asset_pair, iso8601_duration:)) %></li>
        <% end %>
      </ul>
    </details>
  </nav>

  <%= render AssetPairChartComponent.new(asset_pair: @asset_pair, duration: @duration) %>
